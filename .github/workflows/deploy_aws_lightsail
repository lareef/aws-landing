name: Deploy to AWS Lightsails..

on:
  push:
    branches:
      - main

jobs:

  deploy:
    name: Deploy to Lightsail
    runs-on: ubuntu-latest

    steps:
    - name: Checkout code
      uses: actions/checkout@v2

    - name: Install SSH key
      uses: webfactory/ssh-agent@v0.5.3
      with:
      ssh-private-key: ${{ secrets.SSH_PRIVATE_KEY }}

    - name: Deploy to Lightsail
      runs:
       scp -o StrictHostKeyChecking=no ubuntu@54.179.39.150:/www/wwwroot/lareef.publicvm.com
